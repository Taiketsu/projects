package com.revature;

import java.util.Scanner;

import org.apache.log4j.Logger;

public class Menu {
	
	private static Logger log = Logger.getLogger(Menu.class);
	static Scanner sc = new Scanner(System.in);
	
	public void Start() {
		
		String b = "sign up";
		String c = "login";
		
		System.out.println("Hello! Welcome to Revature Banking!");
		System.out.println("Let me know if you want to sign up or login by typing signup "
				+ "or login.");
		String s = sc.nextLine();
		checkStart(s,b,c);
	}

	private void checkStart(String s) {
		switch(s.toLowerCase()) {
		case "sign up":
			SignUp();
			break;
		case "login":
			Login();
			break;
		default:
			log.info("I didn't get that please use either sign up or login.");
			checkStart(sc.nextLine());
		}
	}

	private void Login() {
		
	}

	private void SignUp() {
		
	}

}
